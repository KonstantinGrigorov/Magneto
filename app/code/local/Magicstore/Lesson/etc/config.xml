<config>
    <modules>
        <Magicstore_Lesson>
            <version>1.0.0.0</version>
        </Magicstore_Lesson>
    </modules>
    <frontend>
        <routers>
            <lesson>
                <use>standard</use>
                <args>
                    <module>Magicstore_Lesson</module>
                    <frontName>magicstoretalk</frontName>
                </args>
            </lesson>
        </routers>
        <layout>
            <updates>
                <lesson>
                    <file>lesson.xml</file>
                </lesson>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <lesson>
                <class>Magicstore_Lesson_Block</class>
            </lesson>
        </blocks>
        <models>
            <lesson>
                <class>Magicstore_Lesson_Model</class>
                <resourceModel>lesson_resource</resourceModel>
            </lesson>
            <lesson_resource>
                <class>Magicstore_Lesson_Model_Resource</class>
                <entities>
                    <contact>
                        <table>ain_contact</table>
                    </contact>
                </entities>
            </lesson_resource>
        </models>
    </global>
</config>
